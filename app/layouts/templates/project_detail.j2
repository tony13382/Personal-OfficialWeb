{!doctype html}
<html lang="zh-Hant-TW">
{{ head_html|safe }}

<body class="bg-mytheme">
    {{ navbar_html|safe }}
    <a class="fixed-bottom text-decoration-none" onclick="toTop()" id="toTopBtn"
        style="display:none; z-index:1000; right:16px; bottom:40px; left:auto;">
        <div class="rounded-circle d-inline-flex shadow-lg p-2 rounded toTopBtn">
            <div class="fs-4 d-flex align-items-center flex-wrap justify-content-center text-white"
                style="width:48px; height:48px;">
                <i class="bi bi-chevron-up text-decoration-none d-flex"></i>
            </div>
        </div>
    </a>
    <script src="/assets/script/scroll.js"></script>
    <div>
        <!-- Header Section -->
        <div class="position-relative"
            style="padding:80px 0;width:100%; background:url({{ cover }}); background-repeat:no-repeat; background-size:cover; background-attachment:local;">
            <div class="position-absolute top-0 start-0 w-100 h-100"
                style="background: linear-gradient(0deg, {{ colorSet[0] }}80, {{ colorSet[1] }}90); backdrop-filter: blur(40px);">
            </div>
            <div class="d-flex align-items-center pb-2 position-relative" style="width:100%; min-height:240px;">
                <div class="container">
                    <div class="col-12">
                        <h1 class="text-center fw-bold text-white notoFont">{{ title }}</h1>
                        <p class="text-center fw-bold text-white m-0 notoFont">{{ startdate }} ~ {{ enddate }}</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Main Content -->
        <div class="container" style="margin-top: -160px; min-height:100vh;">
            <div class="row position-relative d-flex align-items-start">
                <div class="col-lg-4 col-12 pb-5 sticky-lg-top" style="padding-top:92px;">
                    <div class="card shadow p-3 bg-body rounded-basic">
                        <div class="card-body">
                            {% if status == 'running' %}
                            <span class="badge bg-success rounded-pill mb-3 fs-5">專案持續維護中</span>
                            {% elif status == 'closed' %}
                            <span class="badge bg-secondary rounded-pill mb-3 fs-5">專案關閉</span>
                            {% endif %}

                            {% if description %}
                            <p class="mb-2 notoFont msf-info-s">{{ description |safe}}</p>
                            {% endif %}

                            {% if subdescription %}
                            <hr class="my-2" style="opacity:10%;">
                            <p class="text-theme fw-bold my-3">{{ subdescription|safe }}</p>
                            {% endif %}

                            {% if tags %}
                            <hr class="my-2" style="opacity:10%;">
                            <div class="fs-5 text-black pt-3">
                                {% for tag in tags %}
                                <span class="badge bg-mytheme text-dark rounded-pill overflow-hidden me-2"># {{ tag
                                    }}</span>
                                {% endfor %}
                            </div>
                            {% endif %}

                            {% if desc_links %}
                            <div class="d-grid gap-2 mt-4">
                                {% for link in desc_links %}
                                {{ link|safe }}
                                {% endfor %}
                            </div>
                            {% endif %}
                        </div>
                    </div>
                </div>

                <div class="col-lg-8 col-12 pb-5 d-grid gap-5">
                    <div style="height: calc(92px - 3rem);" class="d-none d-lg-block"></div>

                    <!-- Meta Card -->
                    <div class="card shadow bg-body rounded-basic ">
                        {% if cover %}
                        <img src="{{ cover }}" alt="Cover Image" class="img-fluid">
                        {% endif %}
                        {% if scores %}
                        <div class="card-body">
                            <div class="p-2 d-grid gap-2">
                                <h3>專案成就</h3>
                                <div>
                                    {% for score in scores %}
                                    <div class="">
                                        {% if not loop.first %}
                                        <hr class="my-1 opacity-10">
                                        {% endif %}
                                        {{ score|safe }}
                                    </div>
                                    {% endfor %}
                                </div>
                            </div>
                        </div>
                        {% endif %}
                    </div>
                    <!-- Tools Card -->
                    {% if tools %}
                    <div class="card shadow bg-body rounded-basic">
                        <div class="card-body">
                            <div class="p-2 d-grid gap-2">
                                <div class="my-2">
                                    <h3>採用技術</h3>
                                </div>
                                <div class="row g-3">
                                    {% for tool in tools %}
                                    {{ tool|safe }}
                                    {% endfor %}
                                </div>
                            </div>
                        </div>
                    </div>
                    {% endif %}

                    <!-- Children Items -->
                    {% if children %}
                    {% for child in children %}
                    {{ child|safe }}
                    {% endfor %}
                    {% endif %}

                </div>
            </div>
        </div>
    </div>

    {{ footer_html|safe }}
</body>

</html>