---
import "../styles/global.css";
import "@fancyapps/ui/dist/fancybox/fancybox.css";
import Header from "@/components/header/Header.astro";
import { themes } from "@/lib/themes";
import Footer from "@/components/footer/Footer.astro";

interface Props {
    title: string;
    description: string;
    ogImage?: string;
    headerType?: "main" | "project";
    themeColor?: string;
}

const {
    title,
    description,
    ogImage = "/assets/MetaTagCover.png",
    headerType = "main",
    themeColor,
} = Astro.props;

// 設置默認主題為 natural
const themeColors: { primary: string; secondary: string } = themeColor
    ? { primary: themeColor, secondary: themeColor }
    : themes.natural;

const canonicalURL = new URL(
    Astro.url.pathname,
    Astro.site || "http://localhost:4321",
);
---

<!doctype html>
<html lang="zh-Hant-TW">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />

        <!-- SEO -->
        <title>{title}</title>
        <meta name="description" content={description} />
        <link rel="canonical" href={canonicalURL} />

        <!-- Open Graph -->
        <meta property="og:url" content={canonicalURL} />
        <meta property="og:type" content="website" />
        <meta property="og:title" content={title} />
        <meta property="og:description" content={description} />
        <meta property="og:image" content={ogImage} />
        <meta property="og:image:alt" content={title} />
        <meta property="og:image:type" content="image/png" />
        <meta property="og:image:width" content="1200" />
        <meta property="og:image:height" content="630" />

        <!-- Fonts -->
        <link rel="preconnect" href="https://fonts.googleapis.com" />
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
        <link
            href="https://fonts.googleapis.com/css2?family=Noto+Sans+TC:wght@100;400;700&display=swap"
            rel="stylesheet"
        />

        <!-- Google Analytics -->
        <script
            async
            src="https://www.googletagmanager.com/gtag/js?id=G-165132NHTH"
        ></script>
        <script is:inline>
            window.dataLayer = window.dataLayer || [];
            function gtag() {
                dataLayer.push(arguments);
            }
            gtag("js", new Date());
            gtag("config", "G-165132NHTH");
        </script>

        <!-- 動態 CSS 變量 -->
        <style
            define:vars={{
                "theme-primary": themeColors.primary,
                "theme-secondary": themeColors.secondary,
            }}
        >
            :global(:root) {
                /* CSS variables injected via define:vars */
                /* 透明度變體 - 使用 color-mix 動態計算 */
                --theme-primary-5: color-mix(
                    in srgb,
                    var(--theme-primary) 5%,
                    transparent
                );
                --theme-primary-10: color-mix(
                    in srgb,
                    var(--theme-primary) 10%,
                    transparent
                );
                --theme-primary-20: color-mix(
                    in srgb,
                    var(--theme-primary) 20%,
                    transparent
                );
                --theme-primary-30: color-mix(
                    in srgb,
                    var(--theme-primary) 30%,
                    transparent
                );
                --theme-primary-40: color-mix(
                    in srgb,
                    var(--theme-primary) 40%,
                    transparent
                );
                --theme-primary-50: color-mix(
                    in srgb,
                    var(--theme-primary) 50%,
                    transparent
                );
                --theme-primary-60: color-mix(
                    in srgb,
                    var(--theme-primary) 60%,
                    transparent
                );
                --theme-primary-70: color-mix(
                    in srgb,
                    var(--theme-primary) 70%,
                    transparent
                );
                --theme-primary-80: color-mix(
                    in srgb,
                    var(--theme-primary) 80%,
                    transparent
                );
                --theme-primary-90: color-mix(
                    in srgb,
                    var(--theme-primary) 90%,
                    transparent
                );

                --theme-secondary-5: color-mix(
                    in srgb,
                    var(--theme-secondary) 5%,
                    transparent
                );
                --theme-secondary-10: color-mix(
                    in srgb,
                    var(--theme-secondary) 10%,
                    transparent
                );
                --theme-secondary-20: color-mix(
                    in srgb,
                    var(--theme-secondary) 20%,
                    transparent
                );
                --theme-secondary-30: color-mix(
                    in srgb,
                    var(--theme-secondary) 30%,
                    transparent
                );
                --theme-secondary-40: color-mix(
                    in srgb,
                    var(--theme-secondary) 40%,
                    transparent
                );
                --theme-secondary-50: color-mix(
                    in srgb,
                    var(--theme-secondary) 50%,
                    transparent
                );

                h2 {
                    color: var(--theme-primary);
                }
                .text-highlight {
                    color: var(--theme-primary);
                    margin: 0 2px;
                    padding: 0 4px;
                    font-weight: 800;
                    background: linear-gradient(
                        to top,
                        var(--theme-primary-20) 30%,
                        transparent 30%
                    );
                    background-position: bottom;
                    background-repeat: no-repeat;
                    background-size: 100% 100%;
                }
                code {
                    color: var(--theme-primary);
                    margin: 0 2px;
                    padding: 0 4px;
                    font-weight: 800;
                    background: linear-gradient(
                        to top,
                        var(--theme-primary-20) 30%,
                        transparent 30%
                    );
                    background-position: bottom;
                    background-repeat: no-repeat;
                    background-size: 100% 100%;
                }
            }
        </style>
    </head>
    <body class="font-sans bg-[var(--theme-primary-10)]">
        <Header type={headerType} themeColor={themeColors.primary} />
        <slot />
        <Footer />
        <!-- Fancybox initialization -->
        <script>
            import { Fancybox } from "@fancyapps/ui";

            // Initialize Fancybox for image lightbox
            Fancybox.bind("[data-fancybox]", {
                Carousel: {
                    Toolbar: {
                        display: {
                            left: ["counter"],
                            middle: [],
                            right: ["close"],
                        },
                    },
                },
            });
        </script>
    </body>
</html>
