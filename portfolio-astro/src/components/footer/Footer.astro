---
import {
  BookIcon,
  BookmarkSimpleIcon,
  ArchiveIcon,
  CoffeeIcon,
  InstagramLogoIcon,
  InfoIcon,
  FacebookLogoIcon,
  EnvelopeIcon,
  WalletIcon,
} from "@phosphor-icons/react";
---

<footer class="bg-[var(--theme-primary-90)] text-white rounded-t-3xl">
  <div class="max-w-8xl mx-auto px-4 md:px-12 py-8">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      <!-- Links Section -->
      <div>
        <h4 class="text-xl font-semibold mb-4 px-4">連結 Links</h4>
        <a
          href="https://learn.lianglu.uk/"
          rel="noopener noreferrer"
          class="flex items-center px-4 py-2 gap-3 text-white/90 hover:text-white hover:bg-[var(--theme-primary-80)] transition-colors no-underline group rounded-full"
        >
          <BookIcon
            className="size-5 group-hover:scale-110 transition-transform"
          />
          <span>知識推薦獲取來源</span>
        </a>
        <a
          href="https://bm.lianglu.uk/"
          rel="noopener noreferrer"
          class="flex items-center px-4 py-2 gap-3 text-white/90 hover:text-white hover:bg-[var(--theme-primary-80)] transition-colors no-underline group rounded-full"
        >
          <BookmarkSimpleIcon
            className="size-5 group-hover:scale-110 transition-transform"
            weight="fill"
          />
          <span>推薦工作書籤</span>
        </a>
        <a
          href="https://meowlu.notion.site/ML-12e7c67f7f2d47249f0111882d932663"
          target="_blank"
          rel="noopener noreferrer"
          class="flex items-center px-4 py-2 gap-3 text-white/90 hover:text-white hover:bg-[var(--theme-primary-80)] transition-colors no-underline group rounded-full"
        >
          <ArchiveIcon
            className="size-5 group-hover:scale-110 transition-transform"
            weight="fill"
          />
          <span>學習資源庫</span>
        </a>
        <a
          href="https://www.instagram.com/digi.ocean/?hl=zh-tw"
          target="_blank"
          rel="noopener noreferrer"
          class="flex items-center px-4 py-2 gap-3 text-white/90 hover:text-white hover:bg-[var(--theme-primary-80)] transition-colors no-underline group rounded-full"
        >
          <InstagramLogoIcon
            className="size-5 group-hover:scale-110 transition-transform"
          />
          <span>旗下知識帳號（DigiOcean）</span>
        </a>
      </div>

      <!-- Donate Section -->
      <div>
        <h4 class="text-xl font-semibold mb-4 px-4">贊助 Donate</h4>
        <a
          href="https://www.buymeacoffee.com/liangchinml"
          target="_blank"
          rel="noopener noreferrer"
          class="flex items-center px-4 py-2 gap-3 text-white/90 hover:text-white hover:bg-[var(--theme-primary-80)] transition-colors no-underline group rounded-full"
        >
          <CoffeeIcon
            className="size-5 group-hover:scale-110 transition-transform"
            weight="fill"
          />
          <span>Buy Me A Coffee</span>
        </a>
        <a
          href="https://portaly.cc/liang_chin_ml/support"
          target="_blank"
          rel="noopener noreferrer"
          class="flex items-center px-4 py-2 gap-3 text-white/90 hover:text-white hover:bg-[var(--theme-primary-80)] transition-colors no-underline group rounded-full"
        >
          <WalletIcon
            className="size-5 group-hover:scale-110 transition-transform"
          />
          <span>贊助系統（Portaly）</span>
        </a>
      </div>

      <!-- Connections Section -->
      <div>
        <h4 class="text-xl font-semibold mb-4 px-4">聯絡 Connections</h4>
        <a
          href="mailto:liangchinlu@gmail.com"
          target="_blank"
          rel="noopener noreferrer"
          class="flex items-center px-4 py-2 gap-3 text-white/90 hover:text-white hover:bg-[var(--theme-primary-80)] transition-colors no-underline group rounded-full"
        >
          <EnvelopeIcon
            className="size-5 group-hover:scale-110 transition-transform"
            weight="fill"
          />
          <span>Email</span>
        </a>
        <a
          href="https://www.instagram.com/liang_chin_ml/"
          target="_blank"
          rel="noopener noreferrer"
          class="flex items-center px-4 py-2 gap-3 text-white/90 hover:text-white hover:bg-[var(--theme-primary-80)] transition-colors no-underline group rounded-full"
        >
          <InstagramLogoIcon
            className="size-5 group-hover:scale-110 transition-transform"
          />
          <span>Instagram</span>
        </a>
        <a
          href="https://www.facebook.com/tony13382/"
          target="_blank"
          rel="noopener noreferrer"
          class="flex items-center px-4 py-2 gap-3 text-white/90 hover:text-white hover:bg-[var(--theme-primary-80)] transition-colors no-underline group rounded-full"
        >
          <FacebookLogoIcon
            className="size-5 group-hover:scale-110 transition-transform"
          />
          <span>Facebook</span>
        </a>
        <a
          href="https://portaly.cc/liang_chin_ml"
          target="_blank"
          rel="noopener noreferrer"
          class="flex items-center px-4 py-2 gap-3 text-white/90 hover:text-white hover:bg-[var(--theme-primary-80)] transition-colors no-underline group rounded-full"
        >
          <InfoIcon
            className="size-5 group-hover:scale-110 transition-transform"
            weight="fill"
          />
          <span>Portaly 傳送門</span>
        </a>
      </div>
    </div>

    <!-- Copyright -->
    <hr class="border-white/20 my-8" />
    <p class="text-background text-center py-2">
      Copyright © 2026 Liang-Chin, Lu 版權所有
    </p>
  </div>
</footer>
