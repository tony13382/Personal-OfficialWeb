---
import "../styles/global.css";
import "@fancyapps/ui/dist/fancybox/fancybox.css";
import Header from "@/components/header/Header.astro";
import { themes } from "@/lib/themes";
import Footer from "@/components/footer/Footer.astro";
import { CaretUpIcon } from "@phosphor-icons/react";

interface Props {
    title: string;
    description: string;
    ogImage?: string;
    headerType?: "main" | "project";
    themeColor?: string;
}

const {
    title,
    description,
    ogImage = "/assets/MetaTagCover.png",
    headerType = "main",
    themeColor,
} = Astro.props;

// 設置默認主題為 natural
const themeColors: { primary: string; secondary: string } = themeColor
    ? { primary: themeColor, secondary: themeColor }
    : themes.natural;

const canonicalURL = new URL(
    Astro.url.pathname,
    Astro.site || "http://localhost:4321",
);
---

<!doctype html>
<html lang="zh-Hant-TW">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />

        <!-- SEO -->
        <title>{title}</title>
        <meta name="description" content={description} />
        <link rel="canonical" href={canonicalURL} />

        <!-- Favicon -->
        <link rel="icon" type="image/png" href="/favicon.png" />
        <link rel="apple-touch-icon" sizes="180x180" href="/favicon.png" />

        <!-- Open Graph -->
        <meta property="og:url" content={canonicalURL} />
        <meta property="og:type" content="website" />
        <meta property="og:title" content={title} />
        <meta property="og:description" content={description} />
        <meta property="og:image" content={ogImage} />
        <meta property="og:image:alt" content={title} />
        <meta property="og:image:type" content="image/png" />
        <meta property="og:image:width" content="1200" />
        <meta property="og:image:height" content="630" />

        <!-- Google tag (gtag.js) -->
        <script
            async
            src="https://www.googletagmanager.com/gtag/js?id=G-165132NHTH"
        ></script>
        <script is:inline>
            window.dataLayer = window.dataLayer || [];
            function gtag() {
                dataLayer.push(arguments);
            }
            gtag("js", new Date());

            gtag("config", "G-165132NHTH");
        </script>

        <!-- 動態 CSS 變量 -->
        <style
            define:vars={{
                "theme-primary": themeColors.primary,
                "theme-secondary": themeColors.secondary,
            }}
        >
            :global(:root) {
                /* CSS variables injected via define:vars */
                /* 透明度變體 - 使用 color-mix 動態計算 */
                --theme-primary-5: color-mix(
                    in srgb,
                    var(--theme-primary) 5%,
                    transparent
                );
                --theme-primary-10: color-mix(
                    in srgb,
                    var(--theme-primary) 10%,
                    transparent
                );
                --theme-primary-20: color-mix(
                    in srgb,
                    var(--theme-primary) 20%,
                    transparent
                );
                --theme-primary-30: color-mix(
                    in srgb,
                    var(--theme-primary) 30%,
                    transparent
                );
                --theme-primary-40: color-mix(
                    in srgb,
                    var(--theme-primary) 40%,
                    transparent
                );
                --theme-primary-50: color-mix(
                    in srgb,
                    var(--theme-primary) 50%,
                    transparent
                );
                --theme-primary-60: color-mix(
                    in srgb,
                    var(--theme-primary) 60%,
                    transparent
                );
                --theme-primary-70: color-mix(
                    in srgb,
                    var(--theme-primary) 70%,
                    transparent
                );
                --theme-primary-80: color-mix(
                    in srgb,
                    var(--theme-primary) 80%,
                    transparent
                );
                --theme-primary-90: color-mix(
                    in srgb,
                    var(--theme-primary) 90%,
                    transparent
                );

                --theme-secondary-5: color-mix(
                    in srgb,
                    var(--theme-secondary) 5%,
                    transparent
                );
                --theme-secondary-10: color-mix(
                    in srgb,
                    var(--theme-secondary) 10%,
                    transparent
                );
                --theme-secondary-20: color-mix(
                    in srgb,
                    var(--theme-secondary) 20%,
                    transparent
                );
                --theme-secondary-30: color-mix(
                    in srgb,
                    var(--theme-secondary) 30%,
                    transparent
                );
                --theme-secondary-40: color-mix(
                    in srgb,
                    var(--theme-secondary) 40%,
                    transparent
                );
                --theme-secondary-50: color-mix(
                    in srgb,
                    var(--theme-secondary) 50%,
                    transparent
                );

                h2 {
                    color: var(--theme-primary);
                }
                .text-highlight {
                    color: var(--theme-primary);
                    margin: 0 2px;
                    padding: 0 4px;
                    font-weight: 800;
                    background: linear-gradient(
                        to top,
                        var(--theme-primary-20) 30%,
                        transparent 30%
                    );
                    background-position: bottom;
                    background-repeat: no-repeat;
                    background-size: 100% 100%;
                }
                code {
                    color: var(--theme-primary);
                    margin: 0 2px;
                    padding: 0 4px;
                    font-weight: 800;
                    background: linear-gradient(
                        to top,
                        var(--theme-primary-20) 30%,
                        transparent 30%
                    );
                    background-position: bottom;
                    background-repeat: no-repeat;
                    background-size: 100% 100%;
                }

                /* Back to Top Button - show state */
                #back-to-top.show {
                    opacity: 1 !important;
                    visibility: visible !important;
                }

                .floatbtn.show {
                    opacity: 1 !important;
                    visibility: visible !important;
                }
            }
        </style>
    </head>
    <body class="font-sans bg-[var(--theme-primary-5)]">
        <Header type={headerType} themeColor={themeColors.primary} />
        <slot />
        <Footer />

        <!-- Back to Top Button -->
        <button
            id="back-to-top"
            class="floatbtn fixed bottom-8 right-6 w-16 h-16 md:bottom-8 md:right-8 rounded-full bg-[var(--theme-primary)] text-background flex items-center justify-center shadow-[0_4px_12px_rgba(0,0,0,0.15)] opacity-0 invisible transition-all duration-300 ease-in-out z-40 cursor-pointer hover:bg-[var(--theme-secondary)] hover:-translate-y-1 hover:shadow-[0_6px_16px_rgba(0,0,0,0.2)] active:-translate-y-0.5"
            aria-label="回到顶部"
            title="回到顶部"
        >
            <CaretUpIcon className="size-8" />
        </button>

        <!-- Fancybox initialization -->
        <script>
            // Dynamic import Fancybox only when needed
            const initFancybox = async () => {
                // Check if there are any Fancybox elements on the page
                if (document.querySelector("[data-fancybox]")) {
                    const { Fancybox } = await import("@fancyapps/ui");

                    // Initialize Fancybox for image lightbox
                    Fancybox.bind("[data-fancybox]", {
                        Carousel: {
                            Toolbar: {
                                display: {
                                    left: ["counter"],
                                    middle: [],
                                    right: ["close"],
                                },
                            },
                        },
                    });
                }
            };

            // Initialize on page load
            initFancybox();
        </script>

        <!-- Back to Top functionality -->
        <script>
            const backToTopButton = document.getElementById("back-to-top");
            const floatButtons = document.getElementsByClassName("floatbtn");

            // Show/hide button based on scroll position
            window.addEventListener("scroll", () => {
                if (window.scrollY > 300) {
                    backToTopButton?.classList.add("show");
                    Array.from(floatButtons).forEach((btn) =>
                        btn.classList.add("show"),
                    );
                } else {
                    backToTopButton?.classList.remove("show");
                    Array.from(floatButtons).forEach((btn) =>
                        btn.classList.remove("show"),
                    );
                }
            });

            // Scroll to top when button is clicked
            backToTopButton?.addEventListener("click", () => {
                window.scrollTo({
                    top: 0,
                    behavior: "smooth",
                });
            });
        </script>
    </body>
</html>
