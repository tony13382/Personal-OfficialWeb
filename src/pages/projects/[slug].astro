---
import { getCollection } from "astro:content";
import BaseLayout from "@/layouts/BaseLayout.astro";
import { Badge } from "@/components/ui/badge";
import { themes } from "@/lib/themes";
import { Card, CardContent, CardHeader, CardTitle } from "@/components/ui/card";
import * as PhosphorIcons from "@phosphor-icons/react";
import { StarIcon } from "@phosphor-icons/react";
import { Button } from "@/components/ui/button";
import { ProfileCardModal, profileData } from "@/components/data/profile";

export async function getStaticPaths() {
  const projects = await getCollection("projects");
  return projects.map((p) => ({
    params: { slug: p.slug },
    props: { project: p },
  }));
}

const { project } = Astro.props;
const { Content } = await project.render();

// SEO
const seo = {
  title: project.data.seo?.metaTitle || `${project.data.title} | 呂亮進`,
  description: project.data.seo?.metaDescription || project.data.description,
  ogImage: project.data.seo?.ogImage || project.data.cover,
};

// 主題顏色
const themeColors = themes[project.data.theme];

//Get Status Badge
const getStatusBadge = (statusStr: string) => {
  switch (statusStr) {
    case "active":
      return { text: "進行中", class: "bg-green-600 hover:bg-green-700" };
    case "closed":
      return { text: "已結束", class: "bg-stone-600 hover:bg-stone-700" };
    case "switch":
      return { text: "已交接", class: "bg-teal-600 hover:bg-teal-700" };
    case "paused":
      return { text: "暫停中", class: "bg-amber-600 hover:bg-amber-700" };
    default:
      return { text: "未知", class: "" };
  }
};
---

<BaseLayout
  title={seo.title}
  description={seo.description}
  ogImage={seo.ogImage}
  headerType="project"
  themeColor={themeColors.primary}
>
  <div>
    <!-- Header Section -->
    <div
      class="relative py-20 w-full"
      style={`background:url(${project.data.cover}); background-repeat:no-repeat; background-size:cover; background-attachment:local;`}
    >
      <div
        class="absolute top-0 start-0 w-full h-full"
        style="background: linear-gradient(0deg, var(--theme-primary-90), var(--theme-secondary-50)); backdrop-filter: blur(40px);"
      >
      </div>
      <div class="relative flex items-center pb-2 w-full min-h-60">
        <div class="container grid grid-cols-1 mx-auto">
          <div class="flex flex-col gap-4">
            <h1 class="text-4xl text-center font-bold text-white">
              {project.data.title}
            </h1>
            <p class="text-center text-background/80">
              {
                project.data.startDate.toLocaleDateString("zh-TW", {
                  year: "numeric",
                  month: "2-digit",
                })
              }
              {
                project.data.endDate
                  ? ` ~ ${project.data.endDate.toLocaleDateString("zh-TW", { year: "numeric", month: "2-digit" })}`
                  : " ~ 現在"
              }
            </p>
            {
              project.data.tags.length > 0 && (
                <div class="flex gap-2 pb-2 justify-center">
                  {project.data.tags.map((tag: string) => (
                    <Badge
                      variant="outline"
                      className="text-sm bg-background/10 text-background"
                      client:load
                    >
                      {tag}
                    </Badge>
                  ))}
                </div>
              )
            }
          </div>
        </div>
      </div>
    </div>
    <!-- Main Content -->
    <div class="container mx-auto -mt-40 pb-20 min-h-screen max-w-5xl">
      <div class="row grid grid-cols-12 align-items-start gap-8 px-4">
        <div class="relative lg:col-span-4 col-span-12 z-10">
          <div class="sticky top-0 pt-23">
            <Card>
              <CardContent className="space-y-4">
                <div class="flex items-center justify-between gap-2">
                  <Badge className={getStatusBadge(project.data.status).class}
                    >{getStatusBadge(project.data.status).text}</Badge
                  >
                  {
                    project.data.pin && (
                      <Badge variant="outline">
                        <StarIcon className="size-3 me-2" />
                        精選
                      </Badge>
                    )
                  }
                </div>
                <p class="notoFont msf-info-s">
                  {project.data.description}
                </p>
                <!-- 連結按鈕 -->
                {
                  project.data.links && project.data.links.length > 0 && (
                    <div class="flex flex-col flex-wrap gap-3 mt-4">
                      {project.data.links.map((link: any) => {
                        const IconComponent = link.icon
                          ? (PhosphorIcons[
                              link.icon as keyof typeof PhosphorIcons
                            ] as PhosphorIcons.Icon) || null
                          : null;
                        return (
                          <Button variant="outline">
                            <a
                              href={link.href}
                              target="_blank"
                              rel="noopener noreferrer"
                              class="flex gap-1.5 items-center"
                            >
                              {IconComponent && (
                                <IconComponent className="size-4" />
                              )}
                              {link.content}
                            </a>
                          </Button>
                        );
                      })}
                    </div>
                  )
                }
              </CardContent>
            </Card>
          </div>
        </div>

        <div class="grid col-span-12 lg:col-span-8 pb-5 gap-8 z-10">
          <div class="hidden lg:block h-[calc(var(--spacing)*(23-8))]"></div>
          <!-- Tools Card -->
          <Card>
            <CardHeader>
              <img
                src={project.data.cover}
                alt={project.data.title}
                class="img-fluid"
              />
            </CardHeader>
          </Card>
          <!-- 獎項 -->
          {
            project.data.scores && project.data.scores.length > 0 && (
              <Card>
                <CardTitle>
                  <h2 style="color: var(--foreground);">獲獎紀錄</h2>
                </CardTitle>
                <CardContent className="pt-4">
                  <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                    {project.data.scores.map((score: any) => (
                      <div class="pt-2 pb-0 space-y-2">
                        <h3>{score.title}</h3>
                        <p
                          class="font-bold text-xl flex items-center"
                          style={`color: ${themeColors.primary}`}
                        >
                          {score.award}
                          {score.category && (
                            <>
                              <span class="mx-1">。</span>
                              {score.category}
                            </>
                          )}
                        </p>
                      </div>
                    ))}
                  </div>
                </CardContent>
              </Card>
            )
          }
          <!-- 使用工具 -->
          {
            project.data.tools && project.data.tools.length > 0 && (
              <Card>
                <CardTitle>
                  <h2>採用技術</h2>
                </CardTitle>
                <CardContent className="pt-4">
                  <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                    {project.data.tools.map((tool: any) => (
                      <div>
                        <p class="font-bold">{tool.name}</p>
                        <p class="text-muted-foreground">{tool.description}</p>
                      </div>
                    ))}
                  </div>
                </CardContent>
              </Card>
            )
          }
          <!-- MDX 內容 -->
          <article class="flex flex-col gap-8">
            <Content />
          </article>
        </div>
      </div>
    </div>
  </div>
  <button
    id="profile-modal-btn"
    class="floatbtn fixed bottom-28 right-6 size-16 md:bottom-30 md:right-8 rounded-full bg-[var(--theme-primary)] text-background flex items-center justify-center shadow-[0_4px_12px_rgba(0,0,0,0.15)] opacity-0 invisible transition-all duration-300 ease-in-out z-40 cursor-pointer hover:bg-[var(--theme-secondary)] hover:-translate-y-1 hover:shadow-[0_6px_16px_rgba(0,0,0,0.2)] active:-translate-y-0.5"
    title="通知我"
  >
    <img
      src="/assets/imgs/index/profileAnimate.png"
      alt={`${profileData.name}的頭像`}
      class="size-16 rounded-full overflow-hidden"
    />
  </button>

  <ProfileCardModal client:load />
</BaseLayout>
